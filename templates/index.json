    "1644381416d5b7016b": {
      "type": "customer-reviews",
      "blocks": {
        "16443814161299c55e-0": {
          "type": "Review",
          "settings": {
            "reviews_image": "shopify:\/\/shop_images\/review1-compressed.jpg",
            "reviews_heading": "Best quality pen I've ever used!",
            "rating": "star5",
            "body_review": "I am a retired professor and have an extensive pen collection. The quality in person is so much better than what you can really tell in the photos. I am a machinist by trade and am VERY impressed with the quality and perfection of the machining.",
            "name": "Daniel McCartney"
          }
        },
        "16443814161299c55e-1": {
          "type": "Review",
          "settings": {
            "reviews_image": "shopify:\/\/shop_images\/review2.jpg",
            "reviews_heading": "PERFECT FOR A WRITER",
            "rating": "star5",
            "body_review": "Nice weighty pen with quality fit, finish and feel! Great for us with larger hands. I am a passionate writer and really enjoy having this pen wherever i go. Ink writes smoothly!  The Quality is Awesome!",
            "name": "Montana Cowboy"
          }
        },
        "16443814161299c55e-2": {
          "type": "Review",
          "settings": {
            "reviews_image": "shopify:\/\/shop_images\/review3.jpg",
            "reviews_heading": "Great Pen",
            "rating": "star5",
            "body_review": "The Bastion Bolt Action Pen is really well made, especially for the price. The machine work is very precise. It screws together really well and stays together even when using it all day. Well worth buying.",
            "name": "Alastair Johnston"
          }
        },
        "fc3e8cf4-faf8-4cb2-b481-9ece896a3936": {
          "type": "Review",
          "settings": {
            "reviews_image": "shopify:\/\/shop_images\/review4.jpg",
            "reviews_heading": "Awesome PEN",
            "rating": "star5",
            "body_review": "I use this thing to write everything from parts lists, to addresses, and even doodles on cardboard boxes. The coating is strong and durable, it’s held up after being shoved in a pocket with other tools for 2 weeks now! 10\/10 would recommend!",
            "name": "John"
          }
        }
      },
