{% if section.settings.title != blank %}
<div class="{% if section.settings.include_margins %}page-width{% endif %}">
<h2 class="title">{{ section.settings.title }}</h2>
  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
</div>
{% endif %}

{% schema %}
{
  "name": "t:sections.apps.name",
  "tag": "section",
  "class": "section apps",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Testimonial",
      "label": "Testimonial"
    },
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "t:sections.apps.settings.include_margins.label"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:sections.apps.presets.name"
    }
  ]
}
{% endschema %}
