<div id="instagram-{{ section.id }}" class="row page-width">
  <div class="instagram-section grid--1-col">
    <div class="instagram-heading">
      {% if section.settings.title != blank %}<div class="instagram-subheading">{{ section.settings.title }}</div>{%- endif -%}
      <h3 class="instagram__title">
        {% if section.settings.heading != blank %}{{ section.settings.heading }}{%- endif -%}
        {% if section.settings.insta_Heading != blank %} <span class="instagram__hashtag">{{ section.settings.insta_Heading }}</span>{%- endif -%}
      </h3>
      <div class="instagram__text">{% if section.settings.des != blank %}{{ section.settings.des }}{%- endif -%}</div>
    </div>
    <div class="instagram-content">
      <div id="insta-feed"></div>
    </div>
  </div>
</div>

<style>
  #instagram-{{ section.id }} .instagram__hashtag{
    color: {{ section.settings.text-color }}; 
    font-weight: 700;
    font-size: 30px;
  }
  #instagram-{{ section.id }} .instagram-subheading{color: {{ section.settings.subtext-color }}; }
  #instagram-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    #instagram-{{ section.id }}{
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    #instagram-{{ section.id }} .instagram__hashtag{
      color: {{ section.settings.text-color }}; 
      font-weight: 700;
      font-size: 26px;
    }
  }  
</style>
{% schema %}
  {
    "name": "Instagram",
    "settings": [
        {
          "type": "header",
          "content": "Content"
        },
        {
          "type": "text",
          "id": "title",
          "default": "@name",
          "label": "Subheading"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Lets",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "insta_Heading",
          "default": "bastion",
          "label": "Instagram Username"
        },
        {
          "type": "richtext",
          "id": "des",
          "label": "Text"
        },
        {
          "type": "header",
          "content": "Style"
        },
        {
          "type": "color",
          "id": "subtext-color",
          "label": "Subheading Color"
        },
        {
          "type": "color",
          "id": "text-color",
          "label": "Instagram Username Color"
        },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "Padding Top",
          "default": 36
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "Padding Bottom",
          "default": 36
        }
      ],
      "presets": [
        {
          "name": "Instagram",
          "category": "instagram-Section"
        }
  	]
  }
{% endschema %}

