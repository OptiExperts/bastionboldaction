<div class="image-two-column-section">
  <div class="image-with-text__grid grid--gapless grid--1-col">
    <div class="heading_section" data-aos="fade-up-right">
      {% if section.settings.heading != blank %}<h2 class="collection-list-title">{{ section.settings.heading }}</h2>{%- endif -%}
      {% if section.settings.text != blank %}{{ section.settings.text }}{%- endif -%}
    </div>
  </div>
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet">
    <div class=" grid__item">
      <div class="image-box" data-aos="zoom-out" data-aos-duration="3000">
        {%- if section.settings.image1 != blank -%}
        {% if section.settings.text_url1 != blank %}
        <a href="{{ section.settings.text_url1 }}">
          <img src="{{ section.settings.image1 | img_url: 'master' }}" alt="{{ section.settings.heading1 }}" loading="lazy">
        </a>
        {%- endif -%}
        {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
        <div class="text-box centered">
          {% if section.settings.text_url1 != blank %}
          <h3 class="collection-title">
            <a href="{{ section.settings.text_url1 }}">{{ section.settings.heading1 }}</a>
          </h3>
          {%- endif -%}
        </div>        
      </div>

    </div>
    <div class=" grid__item">
      <div class="image-box" data-aos="zoom-out" data-aos-duration="3000">
        {%- if section.settings.image2 != blank -%}
        {% if section.settings.text_url2 != blank %}
        <a href="{{ section.settings.text_url2 }}">
          <img src="{{ section.settings.image2 | img_url: 'master' }}" alt="{{ section.settings.heading2 }}" loading="lazy">
        </a>
        {%- endif -%}
        {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}    

        <div class="text-box centered">
          {% if section.settings.text_url2 != blank %}<h3 class="collection-title"><a href="{{ section.settings.text_url2 }}">{{ section.settings.heading2 }}</a></h3>{%- endif -%}
        </div>  
      </div>        
    </div>
  </div>
</div>
<style>
  .image-two-column-section{
    
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
 
  @media screen and (min-width: 750px) {
    .image-two-column-section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .centered .collection-title a{
    padding: {{ section.settings.inner_padding }};   
  }
</style>

